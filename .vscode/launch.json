{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch Linux example",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/examples/linux/bin/atlink_example_linux",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ]
    },
    {
      "name": "(lldb) Launch unit tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests/bin/atlink_tests",
